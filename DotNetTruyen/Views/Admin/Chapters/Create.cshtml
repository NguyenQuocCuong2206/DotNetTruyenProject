@model DotNetTruyen.ViewModels.Management.CreateChapterViewModel

@{
    ViewData["Title"] = "Thêm Chương Mới";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<div class="container py-4">
    

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="shadow-lg p-4 bg-white rounded">
        <input type="hidden" asp-for="ComicId" />

        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="ChapterNumber" class="form-label fw-bold"><i class="fa-solid fa-book"></i> Số Chương</label>
                    <input asp-for="ChapterNumber" class="form-control" placeholder="Nhập số chương..." required />
                    <span asp-validation-for="ChapterNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ChapterTitle" class="form-label fw-bold"><i class="fas fa-heading"></i> Tiêu Đề Chương</label>
                    <input asp-for="ChapterTitle" class="form-control" placeholder="Nhập tiêu đề chương..." required />
                    <span asp-validation-for="ChapterTitle" class="text-danger"></span>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="PublishedDate" class="form-label fw-bold"><i class="fas fa-calendar-alt"></i> Ngày Đăng (Không bắt buộc)</label>
                    <input asp-for="PublishedDate" type="date" class="form-control" />

                    <span asp-validation-for="PublishedDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Khu vực tải ảnh -->
        <div class="mb-3">
            <label class="form-label fw-bold"><i class="fas fa-images"></i> Tải Ảnh Lên</label>

            <div class="border border-primary rounded p-3 text-center" id="customUploadLabel" style="cursor: pointer; background-color: #f8f9fa; transition: background-color 0.3s ease;">
                <i class="fas fa-cloud-upload-alt fa-2x text-primary"></i>
                <p class="mt-2 text-muted">Nhấn để tải ảnh lên</p>
            </div>

            <input asp-for="Images" type="file" class="d-none" multiple accept="image/*" id="imageUpload" required />

            <span asp-validation-for="Images" class="text-danger"></span>

            <!-- Khu vực hiển thị ảnh đã chọn -->
            <div class="mt-3 row" id="imagePreviewContainer"></div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu Chương</button>
            <a asp-action="Index" asp-route-comicId="@Model.ComicId" class="btn btn-secondary"><i class="fas fa-times"></i> Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('customUploadLabel').addEventListener('click', function () {
            document.getElementById('imageUpload').click();
        });

        document.getElementById('imageUpload').addEventListener('change', function (event) {
            let previewContainer = document.getElementById('imagePreviewContainer');
            previewContainer.innerHTML = '';
            let files = event.target.files;

            if (files.length > 30) {
                alert("Bạn chỉ có thể tải lên tối đa 30 ảnh một lần!");
                return;
            }

            Array.from(files).forEach(file => {
                let reader = new FileReader();
                reader.onload = function (e) {
                    let imgElement = document.createElement('div');
                    imgElement.classList.add('col-md-2', 'mb-2');
                    imgElement.innerHTML = `<img src="${e.target.result}" class="img-fluid rounded shadow">`;
                    previewContainer.appendChild(imgElement);
                };
                reader.readAsDataURL(file);
            });
        });
    </script>
}

<style>
    /* Tạo hiệu ứng hover cho phần tải ảnh */
    #customUploadLabel:hover {
        background-color: #e2e6ea;
    }

    /* Tăng chiều cao và kích thước các button để dễ nhìn và dễ bấm */
    .btn {
        padding: 10px 20px;
        font-size: 16px;
    }

    /* Thêm khoảng cách giữa các thành phần trong form */
    .form-label {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .form-control {
        border-radius: 8px;
        padding: 0.8rem;
    }

    /* Thêm hiệu ứng cho các hình ảnh đã tải lên */
    #imagePreviewContainer img {
        transition: transform 0.3s ease;
    }

        #imagePreviewContainer img:hover {
            transform: scale(1.1);
        }
</style>
